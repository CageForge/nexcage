FROM ubuntu:latest

# Встановлюємо часовий пояс неінтерактивно
ENV TZ=UTC
RUN ln -snf /usr/share/zoneinfo/$TZ /etc/localtime && echo $TZ > /etc/timezone

# Встановлюємо необхідні залежності
RUN apt-get update && apt-get install -y \
    protobuf-compiler \
    libgrpc-dev \
    libprotobuf-dev \
    build-essential \
    pkg-config \
    curl \
    git \
    xz-utils \
    wget \
    cmake \
    libatomic1 \
    libatomic-ops-dev \
    libssl-dev \
    zlib1g-dev \
    libc-ares-dev \
    libre2-dev \
    libc-ares2 \
    && rm -rf /var/lib/apt/lists/*

# Збираємо та встановлюємо gRPC C
RUN git clone --recurse-submodules -b v1.60.0 --depth 1 https://github.com/grpc/grpc \
    && cd grpc \
    && mkdir -p cmake/build \
    && cd cmake/build \
    && cmake -DgRPC_INSTALL=ON \
            -DgRPC_BUILD_TESTS=OFF \
            -DCMAKE_BUILD_TYPE=Release \
            -DCMAKE_INSTALL_PREFIX=/usr \
            ../.. \
    && make -j$(nproc) \
    && make install \
    && cd / && rm -rf grpc

# Налаштовуємо шляхи до бібліотек
ENV LD_LIBRARY_PATH="/usr/lib:/usr/local/lib:/usr/lib/x86_64-linux-gnu:${LD_LIBRARY_PATH}"
ENV LIBRARY_PATH="/usr/lib:/usr/local/lib:/usr/lib/x86_64-linux-gnu:${LIBRARY_PATH}"
ENV PKG_CONFIG_PATH="/usr/lib/pkgconfig:/usr/local/lib/pkgconfig:/usr/lib/x86_64-linux-gnu/pkgconfig:${PKG_CONFIG_PATH}"

# Встановлюємо Zig
RUN wget https://ziglang.org/download/0.13.0/zig-linux-x86_64-0.13.0.tar.xz \
    && tar xf zig-linux-x86_64-0.13.0.tar.xz \
    && mv zig-linux-x86_64-0.13.0 /opt/zig \
    && rm zig-linux-x86_64-0.13.0.tar.xz

# Додаємо Zig до PATH
ENV PATH="/opt/zig:${PATH}"

# Створюємо робочу директорію
WORKDIR /build

# Копіюємо файли проекту
COPY . .

# Збираємо проект
CMD ["zig", "build"] 