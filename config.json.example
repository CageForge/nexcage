{
    "proxmox": {
    "pct_path": "/usr/bin/pct",
    "node": "mgr",
    "timeout": 30,
    "legacy_api": {
        "hosts":["mgr.cp.if.ua"],
        "port":8006,
        "token":"your-token",
        "node_cache_duration":60
    }
    },
    "runtime": {
    "log_level":"debug",
    "log_path":"/var/log/nexcage/runtime.log",
    "root_path": "/var/lib/nexcage",
    "terminal": false,
    "routing": [
        {
            "pattern": "^(kube-ovn-.*|cilium-.*)$",
            "runtime": "crun"
        },
        {
            "pattern": ".*",
            "runtime": "lxc"
        }
        ]
    },
    "container_config": {
        "crun_name_patterns": ["kube-ovn-*", "cilium-*"],
        "default_container_type": "lxc"
    },
    "storage": {
        "zfs_dataset": "rpool/lxc",
        "image_path": "/var/lib/nexcage/images"
    },
    "network": {
        "bridge": "vmbr50",
        "dns_servers": ["8.8.8.8", "8.8.4.4"]
    }
} 